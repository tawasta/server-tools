<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Give the new group access to the purchase request menus -->
    <record model="ir.ui.menu" id="purchase_request.parent_menu_purchase_request">
        <field
            name="groups_id"
            eval="[(4, ref('base_read_access_purchase_request.group_readonly'))]"
        />
    </record>

    <record model="ir.ui.menu" id="purchase_request.menu_purchase_request">
        <field
            name="groups_id"
            eval="[(4, ref('base_read_access_purchase_request.group_readonly'))]"
        />
    </record>
</odoo>
