<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">Add Odoo IdP to res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="after">
                <h2>Odoo IdP</h2>
                <div class="row mt16 o_settings_container" name="auth_odoo_idp">
                    <div class="col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label
                                        class="col-lg-4 o_light_label"
                                        for="idp_allowed_ips"
                                    />
                                    <field name="idp_allowed_ips" />
                                    <div class="col-12 text-muted">
                                        Comma separated list of allowed IPs. Empty means none allowed.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
