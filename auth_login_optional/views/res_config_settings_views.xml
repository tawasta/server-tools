<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.login</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="after">
                <h2>Auth Login Optional</h2>
                <div class="row mt16 o_settings_container" name="auth_login_optional">
                    <div class="col-lg-12 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label
                                        class="col-lg-4 o_light_label"
                                        for="optional_login_field"
                                    />
                                    <field name="optional_login_field" />
                                    <div class="col-12 text-muted">
                                        User can use this field to login to system
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
