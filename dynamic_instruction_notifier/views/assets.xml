<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="assets_backend"
        name="assets_backend_show_toast"
        inherit_id="mail.assets_backend"
    >
        <xpath expr="." position="inside">
            <script
                type="text/javascript"
                src="/dynamic_instruction_notifier/static/src/js/show_toast.js"
            />
        </xpath>
    </template>

    <template
        id="assets_frontend_dynamic_instruction_notifier"
        inherit_id="web.assets_frontend"
        name="Dynamic Instruction Notifier - Portal"
    >
        <xpath expr="." position="inside">
            <script
                type="text/javascript"
                src="/dynamic_instruction_notifier/static/src/js/portal_show_toast.js"
            />
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" />
        </xpath>
        <xpath expr="link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/dynamic_instruction_notifier/static/src/scss/style.scss"
            />
        </xpath>
    </template>
</odoo>
